<%- include('partials/header') %>

<div class="container">
  <form action="" method="post">
    <div class="card">
      <div class="card-header text-center">
        <h1>Edit Data</h1>
      </div>
      <div class="card-body">
        <!-- ID -->
        <div class="row mb-3">
          <label for="id" class="col-sm-2 col-form-label">ID</label>
          <div class="col-sm-10">
            <input
              type="number"
              class="form-control"
              name="id"
              id="id"
              placeholder="ID"
              value="<%= item.id %>"
              disabled
            />
          </div>
        </div>
        <!-- STRING -->
        <div class="row mb-3">
          <label for="string" class="col-sm-2 col-form-label">String</label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              name="string"
              id="string"
              placeholder="String" required
              value="<%= item.string %>"
            />
          </div>
        </div>
        <!-- INTEGER -->
        <div class="row mb-3">
          <label for="integer" class="col-sm-2 col-form-label">Integer</label>
          <div class="col-sm-10">
            <input
              type="number"
              class="form-control"
              name="integer"
              id="integer"
              placeholder="Integer" required
              value="<%= item.integer %>"
            />
          </div>
        </div>
        <!-- FLOAT -->
        <div class="row mb-3">
          <label for="float" class="col-sm-2 col-form-label">Float</label>
          <div class="col-sm-10">
            <input
              type="number"
              step="0.005"
              class="form-control"
              name="float"
              id="float"
              placeholder="Float" required
              value="<%= item.float %>"
            />
          </div>
        </div>
        <!-- DATE -->
        <div class="row mb-3">
          <label for="date" class="col-sm-2 col-form-label">Date</label>
          <div class="col-sm-10">
            <input
              type="date"
              name="date"
              class="form-control"
              id="date" required
              value="<%= moment(item.date).format('YYYY-MM-DD') %>"
            />
          </div>
        </div>
        <!-- BOOLEAN -->
        <div class="row mb-3">
          <label for="boolean" class="col-sm-2 col-form-label">Boolean</label>
          <div class="col-sm-10">
            <select name="boolean" class="form-control" id="boolean" required>
              <option value="" disabled >Choose the boolean ...</option>
              <option value=1<%=item.boolean==1 ? ' selected ' : '' %>>true</option>
              <option value=0<%=item.boolean==0 ? ' selected ' : '' %>>false</option>
            </select>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/" class="btn btn-warning">Back</a>
      </div>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
